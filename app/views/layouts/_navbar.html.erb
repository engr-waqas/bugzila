<div class='navbar navbar-expand bg-light navbar-shaddow'>
  <strong>Welcome <%= current_user.name  if current_user%> in Bugzilla </strong>
  <ul class='navbar-nav ms-auto flex-nowrap'>
    <% unless user_signed_in?%>
       <%= link_to 'Log In', new_user_session_path, class: 'btn btn-info' %>
       <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info' %>
    <% else %>
	     <%= link_to 'Update Profile', edit_user_registration_path, class: 'btn btn-info' %>
       <%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-danger',  method: :delete %>
    <% end %>
  </ul>
</div>
