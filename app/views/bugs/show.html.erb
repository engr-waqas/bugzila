<h1><%= @bug.title %></h1>

<p>
  <strong>Description:</strong>
  <%= @bug.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @bug.deadline %>
</p>

<p>
  <strong>Bug type:</strong>
  <%= @bug.bug_type %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bug.status %>
</p>

<% if current_user.qa? %>
  <% if @bug.status == 'Started' %>
    <strong>Assigned to:</strong>
    <%= @bug.developer.name %>
  <% elsif @bug.status == 'Resolved' %>
    <strong>Resolved by:</strong>
    <%= @bug.developer.name %>
  <% end %>
<% end %>

<% if current_user.developer? %>
  <strong>Reported by:</strong>
  <%= @bug.qa.name %>
<% end %>

<p>
  <% if @bug.screenshot.attached? %>
    <strong>Screenshot:</strong><br>
    <%= image_tag @bug.screenshot.variant(resize: '300x300') %>
  <% end %>
</p>

<br>
<div class="align-center">
  <%= link_to 'Back', project_bugs_path, class: "btn btn-secondary" %>
  <% if current_user.qa? %>
    <%= link_to 'Edit Bug', edit_project_bug_path(@project, @bug), class: "btn btn-light" %>
  <% end %>
</div>
