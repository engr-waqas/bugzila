<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Bug type</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.deadline %></td>
        <td><%= bug.bug_type %></td>
        <td><%= bug.status %></td>
        <% if current_user.qa? %>
          <td><%= link_to 'Detail', project_bug_path(@project, bug) %></td>
          <td><%= link_to 'Edit', edit_project_bug_path(@project, bug) %></td>
          <td><%= link_to 'Destroy', project_bug_path(@project, bug), method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% elsif current_user.developer? %>
          <td><%= link_to 'Detail', project_bug_path(@project, bug) %></td>
          <% if bug.developer.nil? && bug.status == 'New'%>
            <td><%= link_to 'Assign me', assign_project_bug_path(@project, bug, user_id: current_user.id) %></td>
          <% elsif bug.developer == current_user && bug.status == 'Started' %>
            <td><%= link_to 'Mark as Resolved', change_status_project_bug_path(@project, bug) %></td>
          <% elsif bug.developer != current_user && bug.status == 'Started'%>
            <td>Assigned to <%= bug.developer.name %></td>
          <% elsif bug.status == 'Resolved'%>
            <td>Resolved by <%= bug.developer.name %></td>
          <% end %>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.qa? %>
  <%= link_to 'Report Bug', new_project_bug_path %> |
<% end %>
<%= link_to 'Back', projects_path %>
