<%= form_with(model: bug, url: [@project, @bug], local: true) do |form| %>

  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div><br>

  <div class="">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div><br>

  <div class="">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline %>
  </div><br>

  <div class="">
    <%= form.label :bug_type %>
    <%= form.select :bug_type, ["Bug","Feature"] %>
  </div><br>

  <div class="">
    <%= form.label :status %>
    <%= form.select :status, ["New", "Started", "Resolved"] %>
  </div><br>

  <div class="">
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot, accept: "image/png, image/gif"%>
  </div><br>

  <div class="">
    <%= form.submit %>
  </div><br>
<% end %>
