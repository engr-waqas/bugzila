<h1>Your Projects</h1>
<table id='projects'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan='3' class="align-center">Actions</th>
    </tr>
  </thead>
  <tbody id='table-body'>
    <%= render partial: 'project', collection: @projects %>
  </tbody>
</table>

<div id='new-project'>
  <% if can_create? %>
    <%= link_to 'Create New Project', new_project_path, class: 'btn btn-primary', remote: true %>
  <% end %>
</div>
