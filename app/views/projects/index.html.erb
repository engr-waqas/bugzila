<div class="align-center">
  <% if current_user.manager? %>
    <%= link_to 'Create New Project', new_project_path, class: "btn btn-light" %>
  <% end%>
</div><br>
<h1 class="align-left">Your Projects</h1>
<br>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <tr></tr>
    <% @projects.each do |project| %>
      <tr>
      <td></td>
        <td><%= project.title %></td>
        <td><%= project.description %></td>

        <td><%= link_to 'Detail', project_path(project), class: "btn btn-success" %> </td>
        <% if current_user.manager? %>
          <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', project, class: "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to "Manage Bugs", project_bugs_path(project), class: "btn btn-info" %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>
